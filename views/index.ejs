         <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
         <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->

      <!-- jQuery (Bootstrap 的 JavaScript 插件需要引入 jQuery) -->
      <script src="js/jquery-3.1.1.min.js"></script>
      <!-- 包括所有已编译的插件 -->
      <script src="js/bootstrap-3.3.7-dist/js/bootstrap.js"></script>	  
	  
   </head>
  <body>
  
<div class="container">
   <div class="row">
   <div class="col-xs-12 col-sm-12">
	  
	<div class="jumbotron">  
    <h1><%= title %><small>第二版</small></h1>
    <p class="lead"><%= WellcomeMSG %></p>

	<div class="row">
	<div class="col-md-6 col-md-offset-3" >
	<p>
	<img src="images/Desert.jpg" class="img-responsive img-circle" alt="响应式图像" ng-hide="showhideimg">
	</p>
	</div>
	</div>	
	<br/>
	<p><a href="/login"><%= LoginMSG %></p></p>
	<p><a href="/CreateNewUser"><%= registMSG %></p></p>
	<% if(sessionUserINFO.currentUserGroup=="CA"){ %>
	<p><a href="/UserRPT"><%= UserRPTMSG %></p></p>
	<% } %>
	<p><%= sessionUserINFO.currentUserName %></p>
	</div>
	
</div>	
</div>	

</div>	

  </body>
</html>
